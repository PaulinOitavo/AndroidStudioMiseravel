<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Historico">

    <TextView
        android:id="@+id/texto_topo"
        style="@style/texto_grande"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Histórico"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:id="@+id/containerComponents"
        style="@style/ContainerComponents"
        android:layout_height="550dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/texto_topo"
        />

    <View
        android:id="@+id/historico"
        style="@style/ContainerHistoric"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="@id/containerComponents"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/historicoTipo"
        style="@style/historicoTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo: Denúncia"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="@id/historico"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/historico"
        />

    <TextView
        android:id="@+id/historicoTipo2"
        style="@style/historicoTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assunto: Água vazando da \nlâmpada do banheiro"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="@id/historico"
        app:layout_constraintEnd_toEndOf=""
        app:layout_constraintTop_toBottomOf="@id/historicoTipo"
        />

    <TextView
        android:id="@+id/historicoTipo3"
        style="@style/historicoTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrição: Essa água além de ter
        \nassustado, preencheu o banheiro
        \ntornado perigoso andar por lá ..."
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="@id/historico"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/historicoTipo2"
        />

    <TextView
        android:id="@+id/historicoTipo4"
        style="@style/historicoTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instituição: ITB Paulista"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="@id/historico"
        app:layout_constraintTop_toBottomOf="@id/historicoTipo3"
        />

    <TextView
        android:id="@+id/historicoTipo5"
        style="@style/historicoTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Foto: sem foto"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="@id/historico"
        app:layout_constraintTop_toBottomOf="@id/historicoTipo4"
        />




</androidx.constraintlayout.widget.ConstraintLayout>